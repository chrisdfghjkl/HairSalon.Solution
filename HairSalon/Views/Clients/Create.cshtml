@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
<div class="content">
  <h4>Add new client</h4>
  <hr />
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name, "Name")
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Phone, "Phone Number")
    @Html.TextBoxFor(model => model.Phone)
    <br>
    @Html.LabelFor(model => model.Stylist, "Stylist (required)")
    @Html.DropDownList("StylistId")
    <br>
    <input type="submit" value="Add client" class="btn btn-primary" />
  }
  <hr />
  <p>@Html.ActionLink("Back to client list", "Index")</p>
</div>