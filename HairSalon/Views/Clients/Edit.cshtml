@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit</h2>
<hr />
<h4>Edit the following client: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name, "Name: ")
  @Html.EditorFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Phone, "Phone Number: ")
  @Html.EditorFor(model => model.Phone)
  <br>
  @Html.LabelFor(model => model.Stylist, "Stylist: ")
  @Html.DropDownList("StylistId")
  <br>
  <input type="submit" value="Save" class="btn btn-primary"/>
}
<hr />
<p>@Html.ActionLink("Back to client list", "Index")</p>