@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
<div class="content">
  <h2>Are you sure you want to delete this stylist?</h2>
  <br>
  <h5>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h5>
  @using (Html.BeginForm())
  {
    <input style="margin-top: 15px;" type="submit" value="Delete" class="btn btn-danger"/>
  }
  <hr />
  @Html.ActionLink("Back to Stylist Details", "Details")
</div>