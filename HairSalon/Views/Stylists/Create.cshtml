@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="content">
  <h3 style="margin-bottom: 10px;">Input Stylist Information</h3>
  <br>
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name, "Name")
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Phone, "Phone Number")
    @Html.TextBoxFor(model => model.Phone)
    <br>
    @Html.LabelFor(model => model.Email, "Email Address")
    @Html.TextBoxFor(model => model.Email)
    <br>
    <input type="submit" value="Add stylist" class="btn btn-primary" /> 
    <hr />
    <p>@Html.ActionLink("Back To  Stylists", "Index")</p>
  }
</div>
