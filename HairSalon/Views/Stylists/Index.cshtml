@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists on staff:</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been hired yet!</h3>
} 

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Staff new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>